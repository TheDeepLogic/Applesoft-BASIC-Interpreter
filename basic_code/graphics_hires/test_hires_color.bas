REM HI-RES COLOR DEMO
REM Demonstrates all HCOLOR values with simple shapes

10 PRINT "HI-RES COLOR DEMO"
20 PRINT ""
30 HGR
40 GOSUB 100
50 PRINT "Color palette displayed"
60 FOR D = 1 TO 20000000: NEXT D
70 END

REM Draw color bars and test pattern
100 PRINT "Drawing color palette..."
110 
REM Color bars - horizontal stripes
120 FOR COLOR = 0 TO 7
130 HCOLOR = COLOR
140 O = COLOR * 24
150 FOR J = O TO O+23
160 HPLOT 0,J TO 279,J
170 NEXT J
180 NEXT COLOR
190 
REM Colored lines as debug reference
200 HCOLOR = 1
210 HPLOT 50,60 TO 100,60
220 HCOLOR = 2
230 HPLOT 50,70 TO 100,70
240 HCOLOR = 3
