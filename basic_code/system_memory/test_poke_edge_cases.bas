10 REM Edge case and advanced POKE/PEEK testing
20 HOME
30 PRINT "EDGE CASE TESTS"
40 PRINT "==============="
50 PRINT ""

100 REM Test 1: Large value wrapping
110 PRINT "TEST 1: VALUE WRAPPING"
120 POKE 500, 300
130 X = PEEK(500)
140 PRINT "POKE 500,300 -> PEEK(500)="; X; " (should be 44)"
150 PRINT ""

200 REM Test 2: Negative values
210 PRINT "TEST 2: NEGATIVE VALUES"
220 POKE 501, -1
230 X = PEEK(501)
240 PRINT "POKE 501,-1 -> PEEK(501)="; X; " (should be 255)"
250 PRINT ""

300 REM Test 3: Zero values
310 PRINT "TEST 3: ZERO HANDLING"
320 POKE 502, 0
330 X = PEEK(502)
340 PRINT "POKE 502,0 -> PEEK(502)="; X
350 PRINT ""

400 REM Test 4: Maximum address
410 PRINT "TEST 4: HIGH ADDRESSES"
420 POKE 65500, 123
430 X = PEEK(65500)
440 PRINT "POKE 65500,123 -> PEEK(65500)="; X
450 PRINT ""

500 REM Test 5: Negative addresses (two's complement)
510 PRINT "TEST 5: NEGATIVE ADDRESSES"
520 POKE -100, 99
530 X = PEEK(-100)
540 PRINT "POKE -100,99 -> PEEK(-100)="; X
550 PRINT ""

600 REM Test 6: Multiple byte reads
610 PRINT "TEST 6: MULTI-BYTE PATTERNS"
620 FOR I = 0 TO 10
630 POKE 1000 + I, I
640 NEXT
650 PRINT "Wrote bytes 0-10 at 1000-1010"
660 FOR I = 0 TO 10
670 X = PEEK(1000 + I)
680 IF X <> I THEN PRINT "ERROR AT "; 1000 + I
690 NEXT
700 PRINT "Read back verified"
710 PRINT ""

800 PRINT "ALL EDGE CASE TESTS COMPLETED"
810 END
